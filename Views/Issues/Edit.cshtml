@model Community_Issue_Tracker.Models.Issue

@{
    ViewData["Title"] = "Edit Issue";
}

<h2>Edit Issue</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category"
                class="form-select"
                asp-items="Html.GetEnumSelectList<Community_Issue_Tracker.Models.IssueCategory>()">
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority"
                class="form-select"
                asp-items="Html.GetEnumSelectList<Community_Issue_Tracker.Models.IssuePriority>()">
        </select>
    </div>

    <!-- 🔥 THIS IS WHAT YOU NEED -->
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status"
                class="form-select"
                asp-items="Html.GetEnumSelectList<Community_Issue_Tracker.Models.IssueStatus>()">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
